<h1>New Post</h1>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body%>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
